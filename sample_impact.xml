<quakeml xmlns="urn:Test.Namespace">
  <eventParameters>
    <event publicID="quakeml:us.anss.org/event/worst_event_ever">

      <!-- Event Origin -->
      <origin publicID="quakeml:us.anss.org/impact/[ID]">
        <time>
          <value>2013-04-12 00:00:00.000Z
          </value>
        </time>
        <latitude>
          <value>
            36.120128
          </value>
        </latitude>
        <longitude>
          <value>
            -115.179291
          </value>
        </longitude>
        <depth>
          <value>
            0.0
          </value>
        </depth>
      </origin> 

      <!-- General Event Description -->
      <eventDescription>
        <comment>
          Magnitude 9.9 earthquake centered on Las Vegas, Nevada.  Every type of loss and every earthquake 
          effect imaginable happened.
        </comment>
        <source>
          Las Vegas Sun News
        </source>
      </eventDescription>

      <!-- Attachments -->
      <attachment>
        <uri>
          http://upload.wikimedia.org/wikipedia/commons/thumb/3/31/NTS_-_BEEF_-_WATUSI.jpg/800px-NTS_-_BEEF_-_WATUSI.jpg
        </uri>
        <comment>
          This used to be the Venetian.
        </comment>
        <creationInfo>
          <agencyID>us
          </agencyID>
          <author>mhearne
          </author>
          <creationTime>2013-04-12 00:00:01.000Z
          </creationTime>
        </creationInfo>
      </attachment>

      <!-- List of effects -->
      <effect effectFlag="Tsunami" publicID="quakeml:us.anss.org/impact/20130412010101/us">
        <comment>
          Massive tidal wave
        </comment>
        <location>
          Hoover Dam
        </location>
        <source>
          Las Vegas Sun News
        </source>
      </effect>
      
      <impactid>
        quakeml:us.anss.org/impact/20130412010101/us
      </impactid>
      
      <!-- List of losses -->
      <loss cause="BuildingsDamaged" publicID="quakeml:us.anss.org/impact/20130412010101/us">
        <quantity value="1000" quantityFlag="lessThan"/>
        <quantityUnits>
          buildings
        </quantityUnits>
        <source>
          Las Vegas Daily News
        </source>
        <comment>
          As many as 1000 buildings were damaged during the earthquake.
        </comment>
      </loss>

      <loss cause="FireDeaths" publicID="quakeml:us.anss.org/impact/20130412010101/us">
        <quantityText>
          thousands
        </quantityText>
        <quantityUnits>
          people
        </quantityUnits>
        <source>
          Las Vegas Daily News
        </source>
        <comment>
          Thousands of people were killed in a fire at a casino.
        </comment>
        <location>
          Mirage Hotel and Casino.
        </location>
      </loss>

      <loss cause="ShakingDeaths" publicID="quakeml:us.anss.org/impact/20130412010101/us">
        <quantityRange minValue="20" maxValue="75"/>
        <quantityUnits>
          people
        </quantityUnits>
        <source>
          Las Vegas Daily News
        </source>
        <comment>
          Between 20 and 75 people are reported dead from building collapse.
        </comment>
      </loss>
      <preferredEffect name="Tsunami" publicID="quakeml:us.anss.org/impact/20130412010101/us"/>
      <preferredLoss name="BuildingsDamaged" publicID="quakeml:us.anss.org/impact/20130412010101/us"/>
      <preferredLoss name="FireDeaths" publicID="quakeml:us.anss.org/impact/20130412010101/us"/>
      <preferredLoss name="ShakingDeaths" publicID="quakeml:us.anss.org/impact/20130412010101/us"/>
    </event>
  </eventParameters>
</quakeml>
